{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "启动工作日志 (SUPERVM)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/tools/work-logger/bin/start-silent.ps1"
      ],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "close": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    }
  ]
}
